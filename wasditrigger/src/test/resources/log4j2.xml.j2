<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <Appenders>
{% if bWasdiSyslogEnabled == true %}
        <Syslog name="{{ sWasdiComponentTriggerServiceName }}-syslog" appName="{{ sWasdiComponentTriggerServiceName }}"
            host="{{ sWasdiComponentTriggerLogSyslogServerAddress }}" port="{{ sWasdiComponentTriggerLogSyslogServerPort }}" protocol="{{ sWasdiComponentTriggerLogSyslogProtocol }}"
            connectTimeoutMillis="30000" reconnectionDelayMillis="2000"
            facility="{{ sWasdiComponentTriggerLogSyslogFacility }}" format="RFC5424" />
{% else %}
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%processId] %d{yyyy-MM-dd HH:mm:ss} | %-8level | %logger{1}:%line | %message%n" />
        </Console>
        <RollingFile name="{{ sWasdiComponentTriggerServiceName }}-native" append="true" fileName="{{ sWasdiComponentTriggerLogNativeFilePath }}" filePattern="{{ sWasdiComponentTriggerLogNativeFilePath }}-%d{yyyy-MM-dd}">
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
            <PatternLayout pattern="[%processId] %d{yyyy-MM-dd HH:mm:ss} | %-8level | %logger{1}:%line | %message%n" />
        </RollingFile>
{% endif %}
    </Appenders>

    <Loggers>
        <Root level="debug">
{% if bWasdiSyslogEnabled == true %}
            <AppenderRef ref="{{ sWasdiComponentTriggerServiceName }}-syslog" />
{% else %}
            <AppenderRef ref="console" />
            <AppenderRef ref="{{ sWasdiComponentTriggerServiceName }}-native" />
{% endif %}
        </Root>
    </Loggers>
</Configuration>
