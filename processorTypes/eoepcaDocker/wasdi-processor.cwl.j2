cwlVersion: v1.2

class: CommandLineTool
id: {{wasdi_app}}
label: executes the WASDI Processor

inputs:
{{ wasdiAppParametersDeclaration }}
    type: string
  wasdi__proc__id:
    type: string
  wasdi__session__id:
    type: string
  wasdi__user__id:
    type: string
  wasdi__ws__id:
    type: string

outputs:
  results:
    type: Directory

requirements:
  NetworkAccess:
    networkAccess: true
  DockerRequirement:
    dockerPull: {{ wasdiProcessorImage }}
    dockerOutputDirectory: /home/wasdi/application
  ResourceRequirement:
    coresMax: 4
    ramMax: 36000
  InlineJavascriptRequirement: {}
  InitialWorkDirRequirement:
    listing:
      - entryname: params.json
        entry: |-
          ${
                var sParamsJson = "{\n";
                var asKeys = Object.keys(inputs);

                for (var i=0; i<asKeys.length; i++) {
                 var sKey = asKeys[i];
                 var oValue = inputs[sKey];
                 sParamsJson += sKey + ":"
                 if (typeof oValue === 'string' || oValue instanceof String) {
                   sParamsJson += '"' + oValue + '"';
                 }
                 else {
                   sParamsJson += oValue;
                 }
                 if (i<asKeys.length-1) {
                   sParamsJson += ",\n"
                 }
               }

               sParamsJson += "\n}\n"

               return sParamsJson;
          }
      - entryname: config.json
        entry: |-
          {
            "USER": "$( inputs.wasdi__user__id )",
            "WORKSPACEID": "$( inputs.wasdi__user__id )",
            "SESSIONID": "$( inputs.wasdi__session__id )",
            "MYPROCID": "$( inputs.wasdi__proc__id )",
            "PARAMETERSFILEPATH": "params.json"
          }
      - entryname: run_wasdi_app.sh
        entry: |-
          #!/bin/bash
          export HOME=$PWD
          eoepcaProcessorExecutor
          res=$?
          rm -f params.json
          rm -f run_me.sh
          rm -fr $HOME/.wasdi
          exit $res

baseCommand: ["python3", "/home/wasdi/application/eoepcaProcessorExecutor.py"]