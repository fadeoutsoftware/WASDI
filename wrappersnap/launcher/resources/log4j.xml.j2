<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true" xmlns:log4j='http://jakarta.apache.org/log4j/'>
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <appender name="fileLauncher" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true" />
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="10" />
        <param name="file" value="/var/log/wasdi/launcher.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <appender name="filePublisher" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="false" />
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="10" />
        <param name="file" value="/var/log/wasdi/publisher.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <root>
        <level value="debug" />
        <appender-ref ref="console" />
    </root>

    <logger name="wasdi">
        <level value="debug" />
        <appender-ref ref="fileLauncher" />
    </logger>

    <logger name="wasdi.rabbit">
        <level value="debug" />
        <appender-ref ref="fileLauncher" />
    </logger>

    <logger name="wasdi.filebuffer">
        <level value="debug" />
        <appender-ref ref="fileLauncher" />
    </logger>

    <logger name="wasdi.snapopearations">
        <level value="debug" />
        <appender-ref ref="fileLauncher" />
    </logger>

    <logger name="wasdi.geoserver">
        <level value="debug" />
        <appender-ref ref="filePublisher" />
    </logger>

    <logger name="wasdi.shared.utils">
        <level value="debug" />
        <appender-ref ref="fileLauncher" />
    </logger>

    <logger name="wasdi.shared.rabbit">
        <level value="debug" />
        <appender-ref ref="fileLauncher" />
    </logger>
{% if ( companyEnvironmentName | lower ) in ["local", "test"] %}

    <logger name="wasdi.shared.managers">
        <level value="debug" />
        <appender-ref ref="fileLauncher" />
    </logger>
{% endif %}
</log4j:configuration>
