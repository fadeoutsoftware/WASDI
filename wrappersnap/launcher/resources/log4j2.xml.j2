<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%processId] %d{yyyy-MM-dd HH:mm:ss} | %-8level | %logger{1}:%line | %message%n" />
        </Console>

        <RollingFile name="{{ sWasdiComponentLauncherServiceName }}-native" append="true" fileName="{{ sWasdiComponentLauncherLogFilePath }}" filePattern="{{ sWasdiComponentLauncherLogFilePath }}-%d{yyyy-MM->
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
            <PatternLayout pattern="[%processId] %d{yyyy-MM-dd HH:mm:ss} | %-8level | %logger{1}:%line | %message%n" />
        </RollingFile>

        <RollingFile name="filePublisher" append="false" fileName="{{ sWasdiComponentPublisherLogFilePath }}" filePattern="{{ sWasdiComponentPublisherLogFilePath }}-%d{yyyy-MM-dd}">
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </RollingFile>

        <Syslog name="{{ sWasdiComponentLauncherServiceName }}-syslog" format="RFC5424" host="127.0.0.1" port="514"
            protocol="UDP" appName="{{ sWasdiComponentLauncherServiceName }}" facility="local0" />
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="console" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
        </Root>

        <Logger name="wasdi" level="debug">
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
        </Logger>

        <Logger name="wasdi.rabbit" level="debug">
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
        </Logger>

        <Logger name="wasdi.filebuffer" level="debug">
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
        </Logger>

        <Logger name="wasdi.snapopearations" level="debug">
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
        </Logger>

        <Logger name="wasdi.geoserver" level="debug">
        	<AppenderRef ref="filePublisher" />
        </Logger>

        <Logger name="wasdi.shared.utils" level="debug">
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
        </Logger>

        <Logger name="wasdi.shared.rabbit" level="debug">
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
        </Logger>

        <Logger name="wasdi.shared.managers" level="debug">
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
        </Logger>
    </Loggers>
</Configuration>
