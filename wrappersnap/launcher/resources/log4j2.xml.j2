<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%processId] %d{yyyy-MM-dd HH:mm:ss} | %-8level | %logger{1}:%line | %message%n" />
        </Console>

        <RollingFile name="{{ sWasdiComponentLauncherServiceName }}-native" append="true" fileName="{{ sWasdiComponentLauncherLogNativeFilePath }}" filePattern="{{ sWasdiComponentLauncherLogNativeFilePath }}-%d{yyyy-MM-dd}">
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
            <PatternLayout pattern="[%processId] %d{yyyy-MM-dd HH:mm:ss} | %-8level | %logger{1}:%line | %message%n" />
        </RollingFile>

        <RollingFile name="filePublisher" append="false" fileName="{{ sWasdiComponentPublisherLogNativeFilePath }}" filePattern="{{ sWasdiComponentPublisherLogNativeFilePath }}-%d{yyyy-MM-dd}">
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </RollingFile>
{% if bWasdiSyslogEnabled == true %}

        <Syslog name="{{ sWasdiComponentLauncherServiceName }}-syslog" format="RFC5424" connectTimeoutMillis="30000"
            host="{{ sWasdiComponentLauncherLogSyslogServerAddress }}" port="{{ sWasdiComponentLauncherLogSyslogServerPort }}"
            protocol="{{ sWasdiComponentLauncherLogSyslogProtocol }}" appName="{{ sWasdiComponentLauncherServiceName }}" facility="{{ sWasdiComponentLauncherLogSyslogFacility }}" />
{% endif %}
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="console" />
{% if bWasdiSyslogEnabled == true %}
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-syslog" />
{% else %}
            <AppenderRef ref="{{ sWasdiComponentLauncherServiceName }}-native" />
{% endif %}
        </Root>
    </Loggers>
</Configuration>
