# {{ ansible_managed }}

http:
  middlewares:
{% if ( aWasdiTraefikDashboardAuthUsers | length ) > 0 %}
    mw_auth-dashboard:
      basicAuth:
        users:
{% for sWasdiTraefikDashboardAuthCurrnetUser in aWasdiTraefikDashboardAuthUsers %}
          - "{{ sWasdiTraefikDashboardAuthCurrnetUser }}"
{% endfor %}
{% endif %}
    mw_wasdi-secure-allowFrame:
      headers:
        frameDeny: false
{% if bWasdiContainerTraefikSslEnabled == True and aoWasdiContainerTraefikSslCertificates | default([]) | length > 0 %}
        sslRedirect: true
{% else %}
        sslRedirect: false
{% endif %}
        browserXssFilter: true
        contentTypeNosniff: true
        stsIncludeSubdomains: true
        stsPreload: true
        stsSeconds: 31536000
        forceStsHeader: true
        referrerPolicy: same-origin
    mw_wasdi-secure-denyFrame:
      headers:
        frameDeny: true
{% if bWasdiContainerTraefikSslEnabled == True and aoWasdiContainerTraefikSslCertificates | default([]) | length > 0 %}
        sslRedirect: true
{% else %}
        sslRedirect: false
{% endif %}
        browserXssFilter: true
        contentTypeNosniff: true
        stsIncludeSubdomains: true
        stsPreload: true
        stsSeconds: 31536000
        forceStsHeader: true
        referrerPolicy: same-origin

{% if bWasdiContainerTraefikSslEnabled == True and aoWasdiContainerTraefikSslCertificates | default([]) | length > 0 %}
tls:
  options:
    default:
      minVersion: VersionTLS12
      cipherSuites:
        - TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256
        - TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256
        - TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384
        - TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384
        - TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305
        - TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305
  certificates:
{% for aoCurrentCertificate in aoWasdiContainerTraefikSslCertificates %}
    - certFile: /etc/traefik/certs/{{ aoCurrentCertificate.certFile }}
      keyFile: /etc/traefik/certs/{{ aoCurrentCertificate.keyFile }}
      stores:
        - default
{% endfor %}
{% endif %}
